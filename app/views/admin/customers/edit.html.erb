<% @title = 'お客様情報の編集' %>
<h1><%= @title %></h1>

<div id="generic-form">
  <%= form_for [ :admin, @customer ] do |f| %>
    <%= render 'form', f: f %>
    <div class="buttons" style="text-align:center;">
      <%= f.submit '更新' ,id:"edit_submit" %>
      <%= link_to 'キャンセル', :admin_customers  ,id:"edit_cancel" %>
    </div>
  <% end %>
</div>
