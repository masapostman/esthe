<!DOCTYPE html>
<!--[if IE 8 ]> <html class="no-js ie ie8" lang="ja"> <![endif]-->
<!--[if IE 9 ]> <html class="no-js ie ie9" lang="ja"> <![endif]-->
<!--[if (gte IE 10)|!(IE)]><!-->
<html class=" js no-touch csstransforms csstransforms3d csstransitions fontface video audio" lang="ja">
<!--<![endif]-->
<head>
  <!-- mp -->
  <meta charset="utf-8">
      <!--[if lt IE 8 ]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
      <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
      <style>
        .chromeFrameOverlayContent {
          top: 50px;
          margin-top: 0;
        }
      </style>
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
      <![endif]-->
  <%= favicon_link_tag %>
  <meta name="globalsign-domain-verification" content="czV6fX99rQMSP3Mnm2LqqeZxp0Yrnt5oUjW2hds4ef" /> 
  <title><%= document_title%></title>
  <meta content="width=device-width,user-scalable=no" name="viewport"></meta>
  <meta content="authenticity_token" name="csrf-param"></meta> 
  <%= stylesheet_link_tag    'customer', media: 'all', 'data-turbolinks-track' => true %>

   <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/redmond/jquery-ui.css">
   <%= javascript_include_tag 'customer', 'data-turbolinks-track' => true %>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js" type="text/javascript"></script>

  <%= csrf_meta_tags %>

  <script>
    $(function(){  
    // 開始日と終了日  
    // 開始日  
      $( "#search_order_date_from" ).datepicker({
          defaultDate: "+0w",
          changeMonth: true,
          numberOfMonths: 1,
          onClose: function( selectedDate ) {
            $( "#search_order_date_to" ).datepicker( "option", "minDate", selectedDate );
          }
      });
      // 終了日  
    $( "#search_order_date_to" ).datepicker({
          defaultDate: "+0w",
          changeMonth: true,
          numberOfMonths: 1,
          onClose: function( selectedDate ) {
            $( "#search_order_date_from" ).datepicker( "option", "maxDate", selectedDate );
          }
    });

    }); 
  </script>

 </head>
<body class="login-page">
 <div id="wrapper">

		<%= render 'customer/shared/header' %>
    <div id="container">
        <%= content_tag(:span, flash.notice, class: 'notice') if flash.notice %>
        <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
			  <%= yield %>
    </div>
    <%= render 'customer/shared/footer' %>
</div>

</body>
</html>
